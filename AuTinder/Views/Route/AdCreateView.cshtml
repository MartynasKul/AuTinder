@model AuTinder.Models.Ad


@{
    ViewData["Title"] = "AdCreateView";
}

<h1>AdCreation</h1>

<h4>Ad information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Store" asp-controller="Ad" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsOrdered" /> @Html.DisplayNameFor(model => model.IsOrdered)
                </label>
            </div>
            <!-- Additional Car Fields -->
            <h4>Car Information</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Car.Make" class="control-label"></label>
                <input asp-for="Car.Make" class="form-control" />
                <span asp-validation-for="Car.Make" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.BodyType" class="control-label"></label>
                <select asp-for="Car.BodyType" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(AuTinder.Models.BodyType)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Car.Year" class="control-label"></label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.FuelType" class="control-label"></label>
                <select asp-for="Car.FuelType" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(AuTinder.Models.FuelType)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Car.Mileage" class="control-label"></label>
                <input asp-for="Car.Mileage" class="form-control" />
                <span asp-validation-for="Car.Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Color" class="control-label"></label>
                <input asp-for="Car.Color" class="form-control" />
                <span asp-validation-for="Car.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Inspection" class="control-label"></label>
                <input asp-for="Car.Inspection" class="form-control" />
                <span asp-validation-for="Car.Inspection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.DriveWheels" class="control-label"></label>
                <select asp-for="Car.DriveWheels" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(AuTinder.Models.DriveWheels)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Car.Gearbox" class="control-label"></label>
                <select asp-for="Car.Gearbox" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(AuTinder.Models.Gearbox)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Car.Power" class="control-label"></label>
                <input asp-for="Car.Power" class="form-control" />
                <span asp-validation-for="Car.Power" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Car.SteeringWheelLocation" class="control-label"></label>
                <select asp-for="Car.SteeringWheelLocation" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(AuTinder.Models.SteeringWheelLocation)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Car.OutsideState" class="control-label"></label>
                <input asp-for="Car.OutsideState" class="form-control" />
                <span asp-validation-for="Car.OutsideState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ExtraFunc" class="control-label"></label>
                <input asp-for="Car.ExtraFunc" class="form-control" />  
            </div>
            <div class="form-group">
                <label asp-for="Car.Rating" class="control-label"></label>
                <input asp-for="Car.Rating" class="form-control" value="10" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
